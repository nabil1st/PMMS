<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">"
    <TextView android:id="@+id/title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Select a task" />

    <Button
        android:id="@+id/expenseCategories"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Expense Categories"/>
    <Button
        android:id="@+id/creditCards"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Credit Cards"/>
    <Button
        android:id="@+id/bankAccounts"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Bank Accounts"/>
    <Button
        android:id="@+id/incomes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Incomes"/>
    <Button
        android:id="@+id/expenses"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Expenses"/>
</LinearLayout>