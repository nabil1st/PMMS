<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout 
android:id="@+id/linlayoutBase"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
>

		<ScrollView
		android:id="@+id/scrollview"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		>
<LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">"
    

    <Button
        android:id="@+id/expenseCategories"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Expense Categories"/>
    <Button
        android:id="@+id/creditCards"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Credit Cards"/>
    <Button
        android:id="@+id/bankAccounts"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Bank Accounts"/>
    <Button
        android:id="@+id/incomes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Incomes"/>
    <Button
        android:id="@+id/payees"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Payees"/>
    <Button
        android:id="@+id/expense_groups"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Expense Groups"/>
    <Button
        android:id="@+id/expenses"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Expenses"/>
</LinearLayout>
</ScrollView>
</LinearLayout>